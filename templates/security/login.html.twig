{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="page-wrapper full-page">
        <div class="page-content d-flex align-items-center justify-content-center">
            <div class="row w-100 mx-0 auth-page">
                <div class="col-md-8 col-xl-4 mx-auto">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="auth-form-wrapper px-4 py-5">
                                    <a href="{{ path('app_login') }}" class="noble-ui-logo d-block mb-2">Cryto<span>monnaie</span></a>
                                    <h5 class="text-muted fw-normal mb-4">Bienvenue ! Connectez-vous Ã  votre compte</h5>
                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}
                                        <div class="mb-3">
                                            <label for="username">Email</label>
                                            <input type="email" value="{{ last_username }}" name="_username"
                                                   id="username" class="form-control" autocomplete="email" placeholder="Votre email" required
                                                   autofocus>
                                        </div>
                                        <div class="mb-3">
                                            <label for="password">Mot de passe</label>
                                            <input type="password" name="_password" id="password" class="form-control"
                                                   autocomplete="current-password" placeholder="Votre mot de passe" required>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}">
                                        <button class="btn btn-lg btn-primary" type="submit">
                                            Connexion
                                        </button>
                                        <a href="#" style="float:right;padding:5px">Sign up</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
